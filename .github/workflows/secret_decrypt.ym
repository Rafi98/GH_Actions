name: Use Decrypted Value

on:
  workflow_dispatch:
    inputs:
      decrypted_value:
        description: 'Decrypted value'
        required: true

jobs:
  use_decrypted_value:
    runs-on: ubuntu-latest
    steps:
      - name: Use Decrypted Value
        run: |
          # Store the decrypted value in an environment variable
          export DECRYPTED_VALUE="${{ github.event.inputs.decrypted_value }}"
          
          # Use the decrypted value in subsequent steps
          echo "Decrypted value: $DECRYPTED_VALUE"
